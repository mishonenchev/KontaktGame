@{
    ViewBag.Title = "KontaktGame";
}

<!DOCTYPE html>
<html>
<head>
    @Styles.Render("~/Content/style.css")
</head>
<body>
    <div class="enter-name-screen">
        <div class="enter-name-inner">
            <h1>Въведете вашето име:</h1>
            <input type="text" class="enter-name" placeholder="Име...">
            <button class="enter-name enter-name-button" onclick="startGame()">ВЛЕЗ</button>
        </div>
    </div>
    <div class="container">
        <div class="container-word">
            <div id="timer"><p><span id="timerMinutes">1</span>:<span id="timerSeconds">54</span></p></div>
            <p id="wordParagraph">Хирошима</p>
            <p id="questionAsked">Думата обвързана ли е с атомна бомба? </p>
            <input data-bind="value: message" type="text" class="enter-name main-input" placeholder="Въведи дума..">
            <button data-bind="click: send" class="buttonForm buttonFormContact">КОНТАКТ</button>
            <button class="buttonForm buttonFormGuess">ПОЗНАЙ</button>
            <div class="activePlayers">
                <div class="activePlayers-inner">
                    <div class="active-player-box">
                        <span class="green-dot"></span>
                        <p>Ivan</p>
                    </div>
                    <div class="active-player-box">
                        <span class="green-dot"></span>
                        <p>Milen</p>
                    </div>
                    <div class="active-player-box">
                        <span class="green-dot"></span>
                        <p>Valentin</p>
                    </div>
                    <div class="active-player-box">
                        <span class="green-dot"></span>
                        <p>Aleksandur</p>
                    </div>
                    <div class="active-player-box">
                        <span class="green-dot"></span>
                        <p>Mihail</p>
                    </div>
                    <div class="active-player-box">
                        <span class="green-dot"></span>
                        <p>Blagovest</p>
                    </div>
                    <div class="active-player-box">
                        <span class="green-dot"></span>
                        <p>Pi6kohui</p>
                    </div>
                    <div class="active-player-box">
                        <span class="green-dot"></span>
                        <p>Pi6kohui</p>
                    </div>
                </div>

                <button>Откажи се</button>
            </div>
            <div class="usedWords">
                <div>Използвани думи</div>
                <p>Хитлер, Евреин, Пещ, Хитлер, Евреин, Пещ, Хитлер, Евреин, Пещ, Хитлер, Евреин, Пещ, Хитлер, Евреин, Пещ, Хитлер, Евреин, Пещ, Хитлер, Евреин, Пещ, </p>
            </div>
        </div>

